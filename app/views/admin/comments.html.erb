<div class="container">
  <h1 class="text-center display-4 mt-2 " style="color: green">Administrator</h1>
  <%= render 'admin/nav_links' %>
  
  <div class="table-responsive">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Post Title</th>
          <th scope="col">Author</th>
          <th scope="col">Comment</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= link_to comment.post.title.truncate(15), admin_post_path(comment.post) %></td>
            <td><%= comment.user.full_name %></td>
            <td><%= link_to comment.body.to_plain_text.truncate(15), admin_comment_path(comment) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
