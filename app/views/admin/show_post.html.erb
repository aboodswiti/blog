<div class="container">
  <h1 class="text-center mb-5">Administrator</h1>

  <%= render "admin/nav_links" %>

  <div class="text-center mt-5">
    <div class="btn-group">
      <%= link_to "Edit", edit_post_path(@post), class:"btn btn-warning me-2 rounded" %>
      <%= button_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger rounded" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <p class="fw-bold">Title: <span class="fw-normal"> <%= @post.title %> </span> </p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <p class="fw-bold">Views: <span class="fw-normal"><%= @post.views %> </span></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <p class="fw-bold">Author: <span class="fw-normal"> <%= @post.user.email %> | <%= @post.user.name %> | <%= pluralize(@post.user.views, "View") %></span></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <p class="fw-bold">Body: <span class="fw-normal"> <%= @post.body %></span></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <p class="fw-bold"><%= pluralize(@post.comments.size, "Comment") %>:</p>
      <% @post.comments.each do |comment| %>
        <div class="mt-3 border border-primary rounded p-3">
          <p class="fw-bold mb-0"><%= comment.user.name %>:</p>
          <p class="mb-0"><%= comment.body %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
