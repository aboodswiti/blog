<div class="container">
  <h1 class="text-center display-4 mt-2 " style="color: green">Administrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Comments</th>
        <th scope="col">Posts</th>

      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= pluralize(user.comments.size, "Comment") %></td>
          <td><%= pluralize(user.posts.size, "Post") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
