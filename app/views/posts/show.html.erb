<div class="container mt-5">
  <%= render @post %>
  <div class="mt-4">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary me-2" %>
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger float-end" %>
  </div>
</div>

<div class="container mt-5">
  <%= render 'comments/form', post: @post, comment: @post.comments.build, submit_label: "Reply", placeholder: "Write your comment here" %>
  
  <div class="mt-4">
    <% @comments.each do |comment| %>
      <%= render 'comments/comment', post: @post, comment: comment %>
    <% end %>
  </div>
</div>
